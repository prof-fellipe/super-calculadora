#include <stdio.h>
#include <stdlib.h>

void regra3(){
    float a, b, c, x;

    // Entradas
    printf("Digite A: ");
    scanf("%f", &a);

    printf("Digite B: ");
    scanf("%f", &b);

    printf("Digite C: ");
    scanf("%f", &c);

    // Cálculo da regra de 3
    x = (b * c) / a;

    // Saída
    printf("Resultado: %.2f\n", x);


}



int main()
{
   int op = 0;

   do {
   puts("+---==[ OPCOES ]==--+");
   puts("| 1........Adicao   |");
   puts("| 2........Subtracao|");
   puts("| 3........Regra3  |");
   puts("| 0........Sair     |");
   puts("+-------------------+");
   printf(" Opcao: ");
   scanf("%d", &op);

   switch(op){
   case 1:
       // função soma;
       break;
   case 2:
       // fução subtração;
    break;
   case 3:
    regra3();
    break;

   default:
    puts("\n\n OPCAO INVALIDA!\n\n");

   }
   }while(op != 0);

    return 0;
}
